{% extends 'dashboard.html.twig' %}

{% block title %}Connection{% endblock %}
{% block desk %}Connection{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 text-danger">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-white bg-warning">Se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="h1 mb-3 font-weight-normal">Connectez vous !</h1>
    <label for="inputEmail" class="h3">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control row w-25 p-4" autocomplete="email" required autofocus>
    <br>
    <label for="inputPassword" class="h3">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control row w-25 p-4" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Souvenez-vous de moi
            </label>
        </div>
   

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
